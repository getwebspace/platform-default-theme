<!-- Start Product -->
<div class="single-product" data-catalog-item>
    <div class="row align-items-center">
        <div class="col-lg-4 col-md-4 col-12">
            <div class="product-image">
                {% include 'mixin/picture.twig' with {
                    'file': product.images.first(),
                    'title': product.title,
                    'alt': product.title,
                    'style': 'height: 288px;'
                } %}

                {% if product.discount %}
                    <span class="sale-tag">$&dash;{{ product.discount }}</span>
                {% endif %}
                {% if product.special %}
                    <span class="new-tag">Special</span>
                {% endif %}

                <div class="button">
                    {# add attr data-catalog-item-add to btn #}
                    <a href="javascript:void(0)" class="btn" data-catalog-item-add><i class="lni lni-cart"></i> Add to Cart</a>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-8 col-12">
            <div class="product-info">
                <span class="category">{{ product.category.title }}</span>
                <h4 class="title">
                    <a href="/catalog/{{ product.address }}">{{ product.title }}</a>
                </h4>
                <div class="price">
                    <span>${{ product.price(catalog_product_price_type()) }}</span>
                </div>
            </div>
        </div>
    </div>

    {# include product options #}
    {% include 'catalog.product.options.twig' with {'categories': categories, 'product': product, 'user': user} only %}
</div>
<!-- End Product -->
