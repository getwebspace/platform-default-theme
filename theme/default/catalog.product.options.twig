{% if product is not empty %}
    <!-- auto generated product options: (uuid:{{ product.uuid }}, external_id:{{ product.external_id }}) -->
    <div style="display: none;">
        <span data-catalog-item-attr="uuid">{{ product.uuid }}</span>
        <span data-catalog-item-attr="title">{{ product.title }}</span>
        <span data-catalog-item-attr="url">/{{ parameter('catalog_address', 'catalog') }}/{{ product.address }}</span>
        <span data-catalog-item-attr="thumb">{{ product.hasFiles() ? product.getFiles().first().getPublicPath('middle') : 'https://via.placeholder.com/220x200' }}</span>
        <span data-catalog-item-attr="vendorcode">{{ product.vendorcode }}</span>
        <span data-catalog-item-attr="price">{{ product.getPriceCalculated('price') }}</span>
        <span data-catalog-item-attr="price_wholesale">{{ product.getPriceCalculated('price_wholesale') }}</span>
        <span data-catalog-item-attr="price_wholesale_from">{{ product.priceWholesaleFrom }}</span>
        <span data-catalog-item-attr="price_type">{{ catalog_product_price_type() }}</span>
        <span data-catalog-item-attr="quantity_step">{{ product.quantity }}</span>
        <span data-catalog-item-attr="quantity_min">{{ product.quantityMin }}</span>

        <span data-catalog-item-attr="group">{{ product.category.title }}</span>
        <span data-catalog-item-attr="type">{{ product.type }}</span>
    </div>
    <!-- auto generated product options: end -->
{% endif %}
