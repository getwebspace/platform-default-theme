{% extends 'main.twig' %}

{% block bodyinner %}
    <!-- Start Error Area -->
    <div class="error-area">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="error-content">
                        <h1>400</h1>
                        <h2>Bad request</h2>
                        <p>{{ exception.getMessage() }}</p>
                        <p>{{ exception.getTraceAsString() }}</p>
                        <div class="button">
                            <a href="/" class="btn">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Error Area -->
{% endblock %}
